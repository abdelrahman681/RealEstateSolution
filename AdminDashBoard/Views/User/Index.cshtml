@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "View";
}

<<h1>All Users</h1>
<hr />

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(u => u.DisplayName)</th>
                <th>@Html.DisplayNameFor(u => u.UserName)</th>
                <th>@Html.DisplayNameFor(u => u.Email)</th>
                <th>@Html.DisplayNameFor(u => u.PhoneNumber)</th>
                <th>Roles</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.DisplayName</td>
                    <td>@user.UserName</td>
                    <td>@Html.DisplayFor(u => user.Email)</td>
                    <td>@Html.DisplayFor(u => user.PhoneNumber)</td>
                    <td>@string.Join(",", user.Roles.ToList())</td>
                    <td>
                        <a class="btn btn-outline-success" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 p-2 alert-warning">
        <h2>There ara not records ):</h2>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

